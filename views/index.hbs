<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ryandw11 Images</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="View user images on Ryandw11 Images.">
    <!-- The Generic CSS Styles -->
    {{> common_css}}
    <!-- Page Specifc CSS Style Pages -->
    <link rel="stylesheet" href="/css/page_styles/index.css">
    <link rel="icon" href="/images/favicon.png" type="image/png" sizes="16x16">
</head>

<body>
    {{> head}}
    <div id="headerBackground">
        <h1>Browse Images</h1>
    </div>
    <!-- The main content -->
    <main>
        <div class="card-columns container mt-5">
            {{#each images}}
            <div class="card">
                <a href="/image/{{file_id}}"><img class="card-img-top border" style="max-height: 25rem;" src="{{file}}" alt="{{caption}}"></a>
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text" style="color: black;">{{caption}}</p>
                    <a href="/image/{{file_id}}" class="card-link">View</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Uploaded: {{date}}</small>
                </div>
            </div>
            {{/each}}
        </div>
        {{!-- The page navigation --}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if pageData.hasPrev}}
                <li class="page-item">
                    <a class="page-link" href="?pge={{pageData.previousPage}}" tabindex="-1">Previous</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="" tabindex="-1">Previous</a>
                </li>
                {{/if}}
                {{#each pageData.pages}}
                <li class="page-item {{#ifEq this ../pageData.pageNumber}}active{{/ifEq}}"><a class="page-link"
                        href="?pge={{this}}">{{this}}</a></li>
                {{/each}}
                {{#if pageData.hasNext}}
                <li class="page-item">
                    <a class="page-link" href="?pge={{pageData.nextPage}}">Next</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="">Next</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </main>

    {{> footer}}

    <!-- The JavaScripts -->
    <script src="/feather.min.js"></script>
    <script>
        feather.replace({ width: '65', height: '65', 'stroke-width': '1' });
    </script>
</body>